@page "/employee"

<h3> Daftar Karyawan</h3>

<div class="card-deck">
    @foreach(var emp in Employees){
        <div class="card m-3" style="min-width: 18 rem; max-width: 30%"> 
            <div class="card-header">
                <h3> @emp.firstName @emp.lastName</h3>      
            </div>
            <img class="card-img-top img-thumbnail" src="@emp.PhotoPath"/> 
            <div class="card-footer text-center">
                <a href="/employeedetail/{id}" class="btn btn-primary m-1"> View</a>
                <a href="#" class="btn btn-success m-1"> Edit</a>
                <a href="#" class="btn btn-danger m-1"> Delete</a>
            </div>
        </div>
    }
</div>
